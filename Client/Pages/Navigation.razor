@inject NavigationManager NavigationManagertoCategory

    <style>
        ul {
            list-style-type: none;
            /* 좌측 여백 없애기 */
            padding-left: 20px;
            /* 우측 정렬 하기 */
            float:left;
        }


            ul li {
                display: inline;
                /* li요소의 좌측 1px의 테두리 만들기 */
                border-left: 1px solid #c0c0c0;
                /* 테두리와 메뉴 간격 벌리기, padding: 위 오른쪽 아래 왼쪽; */
                padding: 0px 15px 0px 15px;
                /* 메뉴와 테두리 사이 간격 벌리기, margin: 위 오른쪽 아래 왼쪽; */
                margin: 10px 0px 10px 0px;
            }

                ul li:first-child {
                    /* li의 첫번째 요소 좌측에는 테두리 없애기 */
                    border-left: none;
                }
    </style>


    <div>
        <ul>
            <li @onclick="GoToTop">상의</li>
            <li @onclick="GoToBottom">하의</li>
            <li @onclick="GoToOuter">아우터</li>
            <li @onclick="GoToDress">원피스</li>
        </ul>
    </div>


    @code {
        protected void GoToTop()
        {
            NavigationManagertoCategory.NavigateTo("");
        }
        protected void GoToBottom()
        {
            NavigationManagertoCategory.NavigateTo("");
        }
        protected void GoToOuter()
        {
            NavigationManagertoCategory.NavigateTo("");
        }
        protected void GoToDress()
        {
            NavigationManagertoCategory.NavigateTo("");
        }
    }





